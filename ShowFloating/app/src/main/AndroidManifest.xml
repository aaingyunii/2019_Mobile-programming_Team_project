<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.showfloating">

    <!-- top-view permission -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- Foreground Service permission(API level 28 or higher) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- FloatingAction on Window permission -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.showfloating.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- demo screen -->
        <activity
            android:name="com.example.showfloating.DeleteActionActivity"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:taskAffinity="jp.co.recruit.floatingview.ChatHeadActivity" />
        <!-- Demo Viewing Service -->
        <service
            android:name="com.example.showfloating.service.ChatHeadService"
            android:exported="false" />
        <!--PopupWindow for chatting situation-->
        <service android:name=".PopupWindow"
            android:enabled="true"
            android:permission="android.permission.SYSTEM_ALERT_WINDOW">
        </service>

    </application>

</manifest>